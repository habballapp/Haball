<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_round"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txt_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="AC Card Battery Charger"
            android:textColor="#96bb3c"
            android:paddingLeft="15dp"
            />
        <TextView
            android:id="@+id/txt_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PKR12000.00"
            android:paddingLeft="15dp"
            android:textSize="10sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_below="@+id/item_selection"
        android:background="@drawable/button_round"
        >

        <TextView
            android:id="@+id/txt_product1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="AC Card Battery Charger"
            android:textColor="#fff"
            android:paddingLeft="15dp"
            />
        <TextView
            android:id="@+id/txt_price1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PKR12000.00"
            android:paddingLeft="15dp"
            android:textSize="10sp"
            />
    </LinearLayout>

</RelativeLayout>