<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background01"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context=".Registration.Registration_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/text_ln"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Welcome To Distributor Portal"
                    android:textSize="20sp"
                    android:textColor="#96bb3c"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:text="@string/Txt_Description"
                    android:textSize="15sp"
                    android:justificationMode="inter_word"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_below="@id/text_ln">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    android:text="REGISTER"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="#96bb3c"
                    android:textStyle="bold"
                    android:background="@drawable/border_set"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="15dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:text="ACCOUNT CREDENTIALS"
                    android:textColor="#96bb3c"
                    android:textSize="10sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/border_set"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:layout_below="@+id/ln_login"
                android:weightSum="3"
                android:orientation="vertical"
                >

                <EditText
                    android:id="@+id/txt_username"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:padding="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:background="@drawable/distribution_login"
                    android:hint="Username Or Mobile No"
                    android:inputType="textEmailAddress"
                    />
                <EditText
                    android:id="@+id/txt_password"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:background="@drawable/distribution_login"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/ic_remove_red_eye_black_24dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:hint="Password"
                    android:drawableRight="@drawable/ic_remove_red_eye_black_24dp" />

                <EditText
                    android:id="@+id/txt_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:background="@drawable/distribution_login"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/ic_remove_red_eye_black_24dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:hint="Confirm Password*"
                    android:drawableRight="@drawable/ic_remove_red_eye_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ln_txt"
                android:weightSum="2"
                android:orientation="vertical"
                >

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:background="@drawable/button_round"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:text="Next"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:text="Â© Haball | All rights reserved"
        android:gravity="center"

        />


</RelativeLayout>