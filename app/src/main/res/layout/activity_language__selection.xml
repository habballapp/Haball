<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.AppCompat.Light"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background01"
    tools:context=".Language_Selection.Language_Selection">


    <LinearLayout
        android:id="@+id/ln_1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:weightSum="2"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="LANGUAGE SELECTION"
            android:gravity="center"
            android:paddingTop="20dp"
            android:textColor="#96bb3c"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:textColor="#000000"
            android:text="زبان منتخب کریں"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <Button
            android:id="@+id/rel_english"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="English"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_round"
            android:layout_marginRight="40dp"
            android:padding="5dp"
            >



        </Button>
        <Button
            android:id="@+id/rel_urdu"
            android:layout_width="match_parent"
            android:layout_below="@id/rel_english"
            android:layout_height="80px"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_round"
            android:layout_marginEnd="50dp"
            android:padding="5dp"
            android:text="اردو"
            android:textColor="@android:color/white"
            >

        </Button>

    </RelativeLayout>

</RelativeLayout>